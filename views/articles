<script type="text/javascript">
    function delete_article(id) {
        $.ajax({
            url: "/",
            type: 'POST',
            cache: false,
            data: {id:id},
            success: function (msg) {
                if (msg.code == 200) {
                    alert('删除文章成功')
                    setTimeout(function() {
                        location.reload()
                    }, 1000)
                } else {
                    alert('删除文章失败');
                }
            },
            error: function () {
                alert('异常')
            }
        })
    }
</script>

